<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical" 
    android:layout_width="fill_parent"
    android:background="@drawable/map"
    android:layout_height="fill_parent">
    
    <ImageView 
        android:id="@+id/splashscreen" 
        android:layout_width="wrap_content"
        android:layout_height="fill_parent"
        android:src="@drawable/sap_logo"
        android:layout_gravity="center"/>

    
    
    <ImageView android:id="@+id/locationIcon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="40dip"
        android:layout_marginTop="150dip"
        android:src="@drawable/location_icon"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/locationIcon"
        android:textStyle="bold"
        android:textColor="#000000"
        android:layout_marginLeft="45dip"
        android:textSize="20dip"
        android:text="Location"/>

    <ImageView android:id="@+id/dealsIcon"
        android:layout_alignParentRight="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="40dip"
        android:layout_marginTop="150dip"
        android:src="@drawable/deals_icon"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/dealsIcon"
        android:layout_alignParentRight="true"
        android:layout_marginRight="55dip"
        android:textStyle="bold"
        android:textColor="#000000"
        android:textSize="20dip"
        android:text="Deals"/>


               

    <!--  Include Footer -->
    <include layout="@layout/dashboard_footer"/>

    

</RelativeLayout>