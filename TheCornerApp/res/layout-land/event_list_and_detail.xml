<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/event_list_and_detail_vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal" >

    <fragment
        android:id="@+id/list_event_fragment"
        android:name="com.sapenguins.thecornerapp.EventListFragment"
        android:layout_width="50dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        tools:layout="@layout/event_list" />

    <View
        android:layout_width="2dp"
        android:layout_height="match_parent"
        android:background="#c8c8ff" />

    <View
        android:layout_width="2dp"
        android:layout_height="match_parent"
        android:background="#ffffff" />

    <View
        android:layout_width="2dp"
        android:layout_height="match_parent"
        android:background="#c8c8ff" />

    <fragment
        android:id="@+id/event_detail_fragment"
        android:name="com.sapenguins.thecornerapp.EventDetailFragment"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        tools:layout="@layout/event_detail" />

</LinearLayout>