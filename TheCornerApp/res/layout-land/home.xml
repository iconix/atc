<?xml version="1.0" encoding="utf-8"?>
<HorizontalScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ScrollView1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/home_bg"
    android:fadingEdge="horizontal" >

    <LinearLayout
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:orientation="horizontal">
        
    
    <ImageView
        android:id="@+id/main_menu_map"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="45dp"
        android:layout_marginRight="45dp"
        android:layout_marginTop="10dp"
        android:contentDescription="@string/ad_image_description"
        android:src="@drawable/home_map_icon" />

    <ImageView
        android:id="@+id/main_menu_promotion"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="45dp"
        android:layout_marginRight="45dp"
        android:layout_marginTop="10dp"
        android:contentDescription="@string/ad_image_description"
        android:src="@drawable/home_promotion_icon" />

    <ImageView
        android:id="@+id/main_menu_event"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="45dp"
        android:layout_marginRight="45dp"
        android:layout_marginTop="10dp"
        android:contentDescription="@string/ad_image_description"
        android:src="@drawable/home_event_icon" />
    
     <ImageView
        android:id="@+id/main_menu_favorite"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="45dp"
        android:layout_marginRight="45dp"
        android:layout_marginTop="10dp"
        android:contentDescription="@string/ad_image_description"
        android:src="@drawable/home_favorite_icon" />
	</LinearLayout>
</HorizontalScrollView>