<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <LinearLayout
            android:id="@+id/map_tab_bar_event"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/tabbar_gradient_bg"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/map_tab_bar_event_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textColor="#666666"
                android:padding="5dp"
                android:text="@string/map_tab_bar_event_text"
                android:textIsSelectable="false"
                android:textStyle="bold"
                android:textSize="14sp" />

            <View
                android:id="@+id/map_tab_bar_event_text_underline"
                android:layout_width="match_parent"
                android:layout_height="4dp"
                android:background="#a2a2ff" />
        </LinearLayout>

        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="#c8c8c8" />

        <LinearLayout
            android:id="@+id/map_tab_bar_promotion"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/tabbar_gradient_bg" 
            android:orientation="vertical">

            <TextView
                android:id="@+id/map_tab_bar_promotion_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textColor="#666666"
                android:padding="5dp"
                android:text="@string/map_tab_bar_promotion_text"
                android:textIsSelectable="false"
                android:textSize="14sp" />
            
             <View
                android:id="@+id/map_tab_bar_promotion_text_underline"
                android:layout_width="match_parent"
                android:layout_height="4dp"
                android:background="#cfcfcf" />
        </LinearLayout>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="#a2a2ff" />
    
    <fragment
        android:id="@+id/map_fragment"
        android:name="com.google.android.gms.maps.SupportMapFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

</LinearLayout>