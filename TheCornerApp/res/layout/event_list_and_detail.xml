<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/event_list_and_detail_vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <LinearLayout
            android:id="@+id/event_tab_bar_item_one"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/tabbar_gradient_bg"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/event_tab_bar_item_one_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"
                android:textColor="#666666"
                android:textIsSelectable="false"
                android:textSize="12sp"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="4dp"
                android:background="#cfcfcf" />
        </LinearLayout>

        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="#c8c8c8" />

        <LinearLayout
            android:id="@+id/event_tab_bar_item_two"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/tabbar_gradient_bg"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/event_tab_bar_item_two_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"
                android:textColor="#666666"
                android:textIsSelectable="false"
                android:textSize="12sp"
                android:textStyle="bold" />

            <View
                android:layout_width="match_parent"
                android:layout_height="4dp"
                android:background="#a2a2ff" />
        </LinearLayout>

        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="#c8c8c8" />

        <LinearLayout
            android:id="@+id/event_tab_bar_item_three"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/tabbar_gradient_bg"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/event_tab_bar_item_three_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"
                android:textColor="#666666"
                android:textIsSelectable="false"
                android:textSize="12sp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="4dp"
                android:background="#cfcfcf" />
        </LinearLayout>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="#a2a2ff" />
    
    <fragment
        android:id="@+id/event_detail_fragment"
        android:name="com.sapenguins.thecornerapp.EventDetailFragment"
        android:layout_width="match_parent"
        android:layout_height="175dp"
        android:layout_weight="1"
        tools:layout="@layout/event_detail" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#c8c8ff" />

    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_marginTop="2dp"
        android:background="#ffffff" />

    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_marginBottom="5dp"
        android:background="#c8c8ff" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical" >

        <fragment
            android:id="@+id/list_event_fragment"
            android:name="com.sapenguins.thecornerapp.EventListFragment"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            tools:layout="@layout/event_list" />
    </RelativeLayout>

</LinearLayout>