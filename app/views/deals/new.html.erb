<% provide(:title, "New Deal") %> 
<% provide(:subtitle, "Create Your Deal") %>

<div class="container jumbotron">
	<div class="row">
		<%= form_for @deal, :html => { :multipart => true } do |f| %>
			<%= render 'shared/deal_error_messages' %>
			<div class="span4">
				<%= f.radio_button :isEvent, 0 %> Deal&nbsp;&nbsp;&nbsp;
				<%= f.radio_button :isEvent, 1 %> Event<br><br>

		    <%= f.label :"Title (required)" %>
		    <%= f.text_field :title %>

		    <%= f.label :"Short Description (max 30 words)" %>
		    <%= f.text_area :shortDescription, :rows => "3" %>

		    <%= f.label :"Long Description" %>
		    <%= f.text_area :longDescription, :rows => "4" %>
		  </div>
			<div class="span4">
		    <%= f.label :"Tags (separated by comma)" %>
		    <%= f.text_field :tags %>

		    <%= f.label :"Start Date and time (required)" %>
		    <%= f.text_field :startDate, :type => "datetime-local" %>

		    <%= f.label :"End Date and time (required)" %>
		    <%= f.text_field :endDate, :type => "datetime-local" %>
		    <br><br>
		    <p>Days of week</p>
				<%= f.check_box :sunday %> Sn&nbsp;
				<%= f.check_box :monday %> M&nbsp;
				<%= f.check_box :tuesday %> T&nbsp;
				<%= f.check_box :wednesday %> W&nbsp;
				<%= f.check_box :thursday %> Th&nbsp;
				<%= f.check_box :friday %> F&nbsp;
				<%= f.check_box :saturday %> S<br>
		  </div>  
		  <div class="span4">
				<%= f.label :address %>
				<%= f.text_area :address, :rows => "3" %>

		    <%= f.label :"Image URL" %>
		    <%= f.text_field :imageURL %>

		    <%= f.label :"Or Upload Image" %>
		    <%= f.file_field :image %>
		    
		    <br><br>
		    <%= f.submit "Create Promo", class: "btn btn-primary" %>
		    <%= submit_tag 'Cancel', :name => 'cancel', class: "btn btn-primary", style: "margin-left: 20px;" %>
			</div>
		<% end %>
	</div>
</div>
