<% provide(:title, @business.name) %>
<div class="container jumbotron row">
  <aside class="span4">
    <section>
      <h1>
        <!-- <%= gravatar_for @business %> -->
        <%= @business.name %>
      </h1>
    </section>
  </aside>
	<div class="span8">
		<% if @business.deals.any? %>
			<h3> Your Deals: </h3>
			<ol>
				<% @deals.each do |deal| %>
					<li><%= deal.title %>. <i>Posted <%= time_ago_in_words(deal.created_at) %> ago.</i></li>
				<% end %>
			</ol>
		<% end %>
	</div>
</div>
