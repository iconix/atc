<% provide(:title, 'Sign up') %>

<div class="container">
  <div class="row">
    <div class="span6">
      <form accept-charset="UTF-8" action="/users" class="new_user form-signin" id="new_user" method="post"><div style="margin:0;padding:0;display:inline"><input name="utf8" type="hidden" value="&#x2713;" /><input name="authenticity_token" type="hidden" value="ciUWLuIlrDyJVuatqhrwopZidOBUn3XcW4oJaI+aZ5k=" /></div>
        <h1 class="center">Sign up</h1>
        
        <%= render 'shared/error_messages' %>


        <label for="user_name">Name</label>
        <input id="user_name" name="user[name]" size="30" type="text" class="input-block-level" />

        <label for="user_email">Email</label>
        <input id="user_email" name="user[email]" size="30" type="text" class="input-block-level" />

        <label for="user_password">Password</label>
        <input id="user_password" name="user[password]" size="30" type="password" class="input-block-level" />

        <label for="user_password_confirmation">Confirmation</label>
        <input id="user_password_confirmation" name="user[password_confirmation]" size="30" type="password" class="input-block-level" />

        <input class="btn btn-large btn-primary center" name="commit" type="submit" value="Create Account" />

        <p><br>Already a user? <%= link_to "Sign in now!", signin_path %>
        </form>
      </div>
      <div class="span6 center">
        <img src="/assets/logo_iphone.png" alt="logo", width="250" height="250">
        <p class="lead">Connect with your customers and the
          world around you on Around the Corner.</p>
        </div>
      </div>
    </div>
  </div>