<% provide(:title, 'All businesses') %>
<% if current_business.admin? then %>
  <%= link_to "<< View profile", current_business %>
<% end %>
<h1>All businesses</h1>

<ul class="businesses">
  <% @businesses.each do |business| %>
    <li>
      <%= link_to business.name, business %>
      (<%= business.deals.all.size %>)
      <% if current_business.admin? && !current_business?(business) %>
        | (<%= business.deals.all.size %> deals)
        | <%= link_to "delete", business, method: :delete,
                                      data: { confirm: "You sure?" } %>
      <% end %>
    </li>
  <% end %>
</ul>
