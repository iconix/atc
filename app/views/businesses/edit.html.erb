<% provide(:title, "Edit profile") %> 
<h1>Update your profile</h1>

<div class="row">
  <div class="span6 offset3">
    <!-- %= gravatar_for @business %>
    <a href="http://gravatar.com/emails">change avatar</a>
    <br><br><br --!>

    <%= form_for(@business) do |f| %>
      <%= render 'shared/business_error_messages' %>

      <%= f.label :name %>
      <%= f.text_field :name %>

      <%= f.label :email %>
      <%= f.text_field :email %>

      <%= f.label :password %>
      <%= f.password_field :password %>

      <%= f.label :password_confirmation, "Confirm Password" %>
      <%= f.password_field :password_confirmation %>

      <br>
      <%= f.submit "Save changes", class: "btn btn-small btn-primary" %>
      <%= submit_tag 'Cancel', :name => 'cancel', class: "btn btn-small btn-primary", style: "margin-left: 20px;" %>
    <% end %>

  </div>
</div>
