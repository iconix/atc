<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/home_root"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#ffffff">
        <!-- Include Header -->
        <include layout="@layout/dashboard_header"/>
 
        <ImageView android:id="@+id/locationIcon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="40dip"
            android:layout_marginTop="150dip"
            android:src="@drawable/location_icon"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/locationIcon"
            android:textStyle="bold"
            android:textColor="#000000"
            android:layout_marginLeft="45dip"
            android:textSize="20dip"
            android:text="Location"/>
        
        <ImageView android:id="@+id/dealsIcon"
            android:layout_alignParentRight="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="40dip"
            android:layout_marginTop="150dip"
            android:src="@drawable/deals_icon"/>
        
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/dealsIcon"
            android:layout_alignParentRight="true"
            android:layout_marginRight="55dip"
            android:textStyle="bold"
            android:textColor="#000000"
            android:textSize="20dip"
            android:text="Deals"/>
   

               

        <!--  Include Footer -->
        <include layout="@layout/dashboard_footer"/>
 
</RelativeLayout>