<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/single_map_vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#808080" >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <ImageView
                android:id="@+id/time_navigation_left_arrow_icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="5dp"
                android:background="#c6c6c6"
                android:padding="7dp"
                android:src="@drawable/arrow_left" />

            <Spinner
                android:id="@+id/map_time_navigation_time_gap_selection"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:orientation="horizontal" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="From: "
                android:textSize="14sp"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="3dp"
                android:layout_marginTop="5dp"
                android:background="@drawable/text_container"
                android:padding="3dp" >

                <TextView
                    android:id="@+id/time_navigation_from_day_selection"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="02/14/2013" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="3dp"
                android:layout_marginTop="5dp"
                android:background="@drawable/text_container"
                android:padding="3dp" >

                <TextView
                    android:id="@+id/time_navigation_from_time_selection"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="4:56 pm" />
            </LinearLayout>

            <ImageView
                android:id="@+id/time_navigation_right_arrow_icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="7dp"
                android:background="#c6c6c6"
                android:padding="7dp"
                android:src="@drawable/arrow_right" />
        </LinearLayout>
    </RelativeLayout>

    <fragment
        android:id="@+id/map_single_fragment"
        android:name="com.sapenguins.atc.MapFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:layout="@layout/map_fragment" />

</LinearLayout>