<?xml version="1.0" encoding="utf-8"?>
<HorizontalScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="horizontal" >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical" 
            android:padding="5dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/time_navigation_from" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/text_container"
                    android:padding="5dip" >

                    <TextView
                        android:id="@+id/time_navigation_from_date"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="02/14/1991" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/text_container"
                    android:padding="5dip" >

                    <TextView
                        android:id="@+id/time_navigation_from_time"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="4:20 pm" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical" 
            android:padding="5dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/time_navigation_to" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/text_container"
                    android:padding="5dip" >

                    <TextView
                        android:id="@+id/time_navigation_to_date"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="02/14/1991" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/text_container"
                    android:padding="5dip" >

                    <TextView
                        android:id="@+id/time_navigation_to_time"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="4:20 pm" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

</HorizontalScrollView>